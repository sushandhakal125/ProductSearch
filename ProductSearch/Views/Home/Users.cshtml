@model IEnumerable<ProductSearch.Models.User>
@using ProductSearch.Models;
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">

                        <h3 align="center" style="color:#0F0455"><b>Manage Users</b></h3>
                        @Html.ActionLink("Create New", "CreateUser", null, new { @class = "btn btn-fill pull-right btn-sm", @style = "background-color:#0F0455;" })
                        <div class="material-datatables">
                            <table class="table table-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th><b>User Id</b></th>
                                        <th><b>Name</b></th>
                                        <th><b>Code</b></th>
                                        <th><b>Allow To Edit?</b></th>
                                        <th><b>Actions</b></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (User user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Name</td>
                                            <td>@user.code</td>
                                            <td>
                                                <div class="checkbox">
                                                    <label>
                                                        <input @(user.AllowToEdit == true ? "checked='checked'" : string.Empty) type="checkbox" disabled />
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditUser", new { Id = user.Id }, new { @class = "btn btn-fill btn-xs", @style = "background-color:#0F0455" })
                                                @Html.ActionLink("Delete", "DeleteUser", new { Id = user.Id }, new { @class = "btn btn-fill btn-xs", @style = "background-color:#0F0455" })
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

