<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Search</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="../../Content/material/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../../Content/material/assets/css/material-dashboard.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #0F0455;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/"><img src="~/Content/material/assets/img/lgo.jpg" height="40" width="40" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name.Substring(User.Identity.Name.IndexOf(@"\") + 1)!</p>
                <div id="adminMenu" class="dropdown navbar-right">
                    <button class="dropbtn">
                        Manage
                        <span class="caret"></span>
                    </button>
                    <div class="dropdown-content">
                        <a href="/Home/Users">Manage Users</a>
                        <a href="/Product/ProductsList">Manage Products</a>
                        <a href="/Product/ImportFromXML">Import from XML</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '/Home/LoadNavMenus',
            method: 'post',
            success: function (data) {
                renderNavMenus(data);
            }
        });
    });

    function renderNavMenus(data) {
        if (data)
            $('#adminMenu').show();
        else
            $('#adminMenu').hide();
    }
</script>

